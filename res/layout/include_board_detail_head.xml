<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingLeft="8.6dp"
	 android:paddingRight="8.6dp"
	 android:paddingTop="5.6dp"
     android:paddingBottom="5.6dp"
     android:orientation="vertical">
    
     <LinearLayout
     	android:layout_width="match_parent"
     	android:layout_height="wrap_content"
   	    android:gravity="center_vertical"
     	android:orientation="horizontal">
         
     	<ImageView
		    android:id="@+id/img_cont_author"
		    android:layout_marginLeft="-3dp"
		    android:layout_marginRight="3dp"
	      	android:gravity="center_vertical"
		    android:src="@drawable/ic_social_person"
		    android:background="@drawable/container_dropshadow"
		    style="@style/userProfileImg" />
	    
	    <LinearLayout 
	      	android:layout_width="0dp"
	  		android:layout_height="wrap_content"
	  		android:layout_weight="1"
	  		android:orientation="vertical">
	  		
		  	<TextView 
		       	android:id="@+id/tv_board_cont_author"
		       	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:textIsSelectable="true"
			   	android:textSize="13sp"
			   	style="?detailHeadAuthorColor"
			   	/>
	 
		 	<TextView 
		  		android:id="@+id/tv_board_cont_title"
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:textIsSelectable="true"
		       	android:textSize="17sp"
		       	android:textStyle="bold"
			   	style="?detailHeadTitleColor"
			   	/>
		 	
		 	<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
			        
		        <!-- 작성일 -->
		        <TextView
		            android:id="@+id/tv_board_cont_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:textIsSelectable="true"
			        android:textSize="12sp"
			        android:textColor="#9b9b9b"
			        />
			        
		        <View 
		            android:layout_width="0dp"
		            android:layout_height="0dp"
		            android:layout_weight="1"/>
			        
		        <!-- 조회수 -->
		        <TextView 
		            android:id="@+id/tv_head_viewcnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:textIsSelectable="true"
			        android:text="120"
			        android:gravity="right"
			        android:textSize="12sp"
			        android:textColor="#ea3f03"
			        android:textStyle="bold"
			        />
		    </LinearLayout>
	    </LinearLayout>
   	</LinearLayout>
   	<View
     	android:layout_width="match_parent"
     	android:layout_height="0.7dp"
     	android:layout_marginTop="3dp"
     	style="?detailContentLine"
      	/>
</LinearLayout>